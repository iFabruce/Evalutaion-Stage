<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Backoffice</title>
    <link rel="stylesheet" href="/static/assets/css/bootstrap.css">
    <link rel="stylesheet" href="/static/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/assets/js/bootstrap.js">
    <link rel="stylesheet" href="/static/assets/js/bootstrap.min.js">
    <link rel="stylesheet" href="/static/assets/css/style.css">

</head>
<body>  
    <% const login=""%> 
    <div class="container">
        <div class="row"></div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4" id="content">
                <h2 class="headerText">FrontOffice</h2> <br>
                <form action="/login_frontoffice" method="post">
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Identifiant</label>
                      <input type="text" name="[login]" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    </div>
                    <div class="mb-3">
                      <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
                      <input type="password" name="[mdp]" class="form-control" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3 pt-2">
                    <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                  </form>
                  <a href="/" style="font-size: 14px">Accedez au BackOffice</a>
                  <%if(locals.erreur){%>
                    <hr>  
                    <p><%=erreur%></p> 
                <%}%>
            </div>
            <div class="col-md-4"></div>
        </div>
        <div class="row"></div>

    </div>
</body>
</html>